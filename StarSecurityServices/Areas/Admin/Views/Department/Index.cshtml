@model X.PagedList.IPagedList<Data_DAL.Entities.Department>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Department";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

 
<h1>List of Department</h1>
<h1>@ViewBag.ErrorMessage</h1>


<div class="row">
    <div class="col-xl-12">
        <div class="card">
      

            <div class="card-body">
              
                <p>
                    <a asp-action="Create" class="btn btn-success">Create</a>
                </p>
                <div class="live-preview">
                    <div class="table-responsive table-card">
                        <table class="table align-middle table-nowrap table-striped-columns mb-0">
                            <thead class="table-light">
                                <tr>
                                
                               
                                    <th >Name</th>
                                    <th >Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                     
                                        <td>@item.Name</td>
      
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete the department?')">Delete</a>
                                        </td>
                                    
                                    </tr>
                                }
                               
                            </tbody>
                        </table>
                    </div>
                </div>
              
        </div><!-- end card -->
    </div><!-- end col -->
</div><!-- end row -->

</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
        new X.PagedList.Web.Common.PagedListRenderOptions
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
    }
        )