@model X.PagedList.IPagedList<Data_DAL.Entities.Service>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Service";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>List of Service</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create</a>
</p>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
          

            <div class="card-body">

               
                <div class="live-preview">
                    <div class="table-responsive table-card">
                        <table class="table align-middle table-nowrap table-striped-columns mb-0">
                            <thead class="table-light">
                                <tr>

                                   
                                    <th>ServiceName</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                      
                                        <td>@item.ServiceName</td>
                                      
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete the Service?')">Delete</a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div><!-- end card -->
        </div><!-- end col -->
    </div><!-- end row -->

</div>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
            new X.PagedList.Web.Common.PagedListRenderOptions
        {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }
        }
            )
